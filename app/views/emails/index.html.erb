<h1>Listing emails</h1>
<%#= email_url() %>

<table>
  <tr>
    <th>Subject</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @emails.each do |email| %>
  <tr>
    <td><%= email.subject %></td>
    <td><%= truncate email.body, :length => 100 %></td>
    <td><%= link_to 'Show', email %></td>
  </tr>
<% end %>
</table>

